TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_PERMISSION_TIMEOUT=300
TELEGRAM_FALLBACK_ON_ERROR=allow
TELEGRAM_HOOK_LOG=/tmp/telegram_claude_hook.log

# Smart filtering: all | smart (default) | critical
# - all: every tool triggers approval (no auto-approve)
# - smart: auto-approves safe commands (ls, cat, git status...), asks for dangerous ones
# - critical: only the most destructive operations (rm, sudo, git push...) need approval
TELEGRAM_SENSITIVITY=smart

# Max retries when Telegram times out (default: 2)
# TELEGRAM_MAX_RETRIES=2
